<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:elevation="10dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.company.reportarchive.reportarchive.activities.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:padding="4dp"
        android:background="@drawable/edittextstyle"
        android:hint="Enter the Aadhar Number : "
        android:id="@+id/aadhar_text_field"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/show_when_doctor_latest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:text="Last Checked"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id = "@+id/main_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />







</LinearLayout>
